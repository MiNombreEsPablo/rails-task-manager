<%= form_with model: task do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "control-label", for: "title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :details, class: "control-label", for: "details" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :completed, class: "control-label" do %>
      <%= hidden_field_tag "task[completed]", "false" %>
      <%= f.check_box :completed, {}, true, false %>
      Completed
    <% end %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
