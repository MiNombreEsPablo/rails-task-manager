<h1>Your tasks</h1>
<div class="border-bottom pb-3 mb-3">
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= raw task.completed == true ? "<i class=\"fa-regular fa-square-check\"></i>" : "<i class=\"fa-regular fa-square\"></i>" %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>
</div>
<%= link_to new_task_path do %>
  <i class="fa-solid fa-plus"></i> Add a new task
<% end %>
